<Application
    x:Class="표준국어대사전.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:local="using:표준국어대사전">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="NavigationViewBackground" Color="#F3F3F3"/>
                    <SolidColorBrush x:Key="PageBackgroundBrush" Color="#F9F9F9"/>
                    <SolidColorBrush x:Key="BorderBrush" Color="#E5E5E5"/>
                    <SolidColorBrush x:Key="TextForeground" Color="#000"/>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="NavigationViewBackground" Color="#202020"/>
                    <SolidColorBrush x:Key="PageBackgroundBrush" Color="#272727"/>
                    <SolidColorBrush x:Key="BorderBrush" Color="#1D1D1D"/>
                    <SolidColorBrush x:Key="TextForeground" Color="#fff"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
